{
  "name": "restheart-plugin-skeleton",
  "version": "1.0.0",
  "description": "This is only used for npm-watch",
  "watch": {
    "kill-restheart": {
      "patterns": ["/opt/restheart/plugins/" ],
      "extensions": "jar"
    },
    "touch": "/opt/watcher"
  },
  "scripts": {
    "watch": "npm-watch",
    "kill-restheart": "test -f /opt/watcher/restheart-started && rm /opt/watcher/restheart-started && kill `pgrep java`",
    "touch": "test ! -f /opt/watcher/restheart-started && sleep 5 && touch /opt/watcher/restheart-started"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SoftInstigate/restheart-plugin-skeleton.git"
  },
  "author": "Andrea Di Cesare <andrea@softinstigate.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/SoftInstigate/restheart-plugin-skeleton/issues"
  },
  "homepage": "https://github.com/SoftInstigate/restheart-plugin-skeleton#readme",
  "dependencies": {
    "npm-watch": "^0.7.0"
  }
}
